<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ac_login">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="363dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_logo" />

    <ImageView
        android:id="@+id/img_boasvindas"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/img_logo"
        app:layout_constraintStart_toStartOf="@+id/img_logo"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:srcCompat="@drawable/ico_boasvindas" />

    <Button
        android:id="@+id/btn_loginfb"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ico_lginfacebook"
        app:layout_constraintEnd_toEndOf="@+id/img_boasvindas"
        app:layout_constraintStart_toStartOf="@+id/img_boasvindas"
        app:layout_constraintTop_toBottomOf="@+id/img_boasvindas" />

    <ImageView
        android:id="@+id/img_divisao"
        android:layout_width="400dp"
        android:layout_height="22dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginfb"
        app:layout_constraintStart_toStartOf="@+id/btn_loginfb"
        app:layout_constraintTop_toBottomOf="@+id/btn_loginfb"
        app:srcCompat="@drawable/ico_divisao" />

    <Button
        android:id="@+id/btn_criarConta"
        android:layout_width="400dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ico_criarconta"
        app:layout_constraintEnd_toEndOf="@+id/img_divisao"
        app:layout_constraintStart_toStartOf="@+id/img_divisao"
        app:layout_constraintTop_toBottomOf="@+id/img_divisao" />

    <Button
        android:id="@+id/btn_naocadastrar"
        android:layout_width="400dp"
        android:layout_height="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ico_naocadastrar"
        app:layout_constraintEnd_toEndOf="@+id/btn_criarConta"
        app:layout_constraintStart_toStartOf="@+id/btn_criarConta"
        app:layout_constraintTop_toBottomOf="@+id/btn_criarConta" />

    <Button
        android:id="@+id/btn_entrarConta"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/icon_entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>